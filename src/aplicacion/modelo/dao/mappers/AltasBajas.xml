<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace='aplicacion.modelo.dao.mappers.AltasBajas'>

	<resultMap type='Equipo' id='EquiposResult'>
		<id property='id' column='id' />
		<result property='nombre' column='nombre' />
	</resultMap>

	<select id='getEquipos' resultMap='EquiposResult'>
		SELECT * FROM equipo
	</select>

	<insert id='insertEquipo' parameterType='Equipo' useGeneratedKeys='true' keyProperty='id'>
		INSERT INTO equipo (nombre)
		VALUES(#{nombre})
	</insert>

	<update id='updateEquipo' parameterType='Equipo'>
		UPDATE equipo
		SET
		nombre = #{nombre}
		WHERE id = #{id}
	</update>

	<delete id='deleteEquipo'>
		DELETE FROM equipo WHERE id = #{id}
	</delete>

	<select id='getEquipo' resultType='Equipo'>
		SELECT * FROM equipo WHERE id = #{id}
	</select>
</mapper>