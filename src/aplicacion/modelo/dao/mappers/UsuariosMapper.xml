<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace='aplicacion.modelo.dao.mappers.UsuariosMapper'>

	<resultMap type='Usuario' id='UsuariosResult'>
		<id property='id' column='id' />
		<result property='correo' column='correo' />
		<result property='nombre' column='nombre' />
		<result property='password' column='password' />
		<result property='foto' column='foto' />
		<result property='validado' column='validado' />
		<result property='fechaRegistro' column='fechaRegistro' />
	</resultMap>

	<select id='existeUsuario' resultType='Usuario'>
		SELECT * FROM usuario WHERE correo = #{correo} AND password = #{paswd}
	</select>
	
	<select id='existeUsuario' resultType='Usuario'>
		SELECT * FROM usuario WHERE correo = #{correo}
	</select>
	
	<insert id='insertUsuario' useGeneratedKeys='true' keyProperty='id'>
		INSERT INTO usuario (correo,nombre,password,foto,validado,fechaRegistro)
		VALUES(#{usuario.correo},#{usuario.nombre},#{usuario.password},#{usuario.foto},#{esValidado},#{fecha})
	</insert>
	
	<update id='validarPorId'>
		UPDATE usuario
		SET
		validado=1
		WHERE id = #{idUsuario}
	</update>
	
	<delete id='deleteUsuario' parameterType='Usuario'>
		DELETE FROM usuario WHERE id = #{id}
	</delete>
	
	<select id='existeUsuario'>
		SELECT * FROM usuario WHERE id = #{idUsuario}
	</select>
	
	<delete id='limpiar' parameterType='Usuario'>
		DELETE FROM usuario WHERE validado = 0
	</delete>
	
</mapper>